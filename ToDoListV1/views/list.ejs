<%- include('header'); %>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
    <% for(const item of list) { %>
    <div class="item">
        <input type="checkbox">
        <p><%= item %></p>
    </div>
    <% } %>

    <form class="item" action="/" method="POST">
        <input name="newItem" type="text" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include('footer'); %>
